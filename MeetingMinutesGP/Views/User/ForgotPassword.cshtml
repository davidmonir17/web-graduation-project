
@{
    ViewBag.Title = "ForgotPassword";
}
<style>
    .loginform {
        /*float:none !important;*/
        /*clear:both;*/
    }

    .loginbtn {
        background: #1cc3b2;
        color: #fff;
        border: none;
        padding: 10px;
        font-weight:bold;
        transition: background-color 200ms linear;
    }
    .successmessage{
        text-align:center !important;
    }
    .loginbtn:hover {
        background: #252c38;
        color: #fff;
            
    }

    .loginform {
        border-radius: 5px;
        box-shadow: rgb(158, 158, 158) 0px 0px 11px 0px;
        /*float: none;*/
    }

    .ForgotPassword {
        color: #809191;
        font-size: 14px;
        text-align:center !important;
    }

        .ForgotPassword:hover {
            text-decoration: none;
            color: #809191;
        }

    .Register {
        display: block;
        padding: 17px;
        margin: 0;
    }

    .Signin, .Newaccount {
        border-radius: 5px 5px 0 0;
        text-decoration: none;
        /*float: left;*/
        margin: 0;
    }

    .Signin {
        background: #fff;
        border-radius: 5px 0 0 0;
        border-bottom: 1px solid #dee2e6;
    }

    .Newaccount {
        background: #252c38;
        border-radius: 0 5px 0 0;
    }

        .Newaccount .Register, .Signin .Register {
            text-decoration: none;
            float: none;
            font-weight: bold;
        }

        .Newaccount .Register {
            color: #fff;
        }

    .Signin .Register {
        color: #252c38;
    }

    .emailLabel, .passwordLabel {
        display: block;
    }

    input, select, textarea {
        max-width: 100%;
        /*float:none !important;*/
    }

    label {
        text-align: left !important;
        /*float:none !important;*/
    }

    #RememberMe {
        float: none !important;
    }

    .textleft {
        text-align: left !important;
    }
</style>
<br />
<div class="container body-content">

    @using (Html.BeginForm())
    {
        <div class="form-horizontal border col-md-6 col-md-offset-3 centered loginform">
            <div class="form-group row" align="center">
                <div class="col-md-6 Signin">
                    @Html.ActionLink("Sign in", "Login", "User", new { @class = "Register col-md-6" })
                </div>
                <div class="col-md-6 Newaccount">
                    @Html.ActionLink("New account", "Registration", "User", new { @class = "Register col-md-6" })
                </div>
            </div>
            <div class="form-group" align="center">
                <label class="col-md-10 col-md-offset-1 ForgotPassword " >
                    Lost your password? Please enter your email address. You will receive a link to create a new password.
                </label>

            </div>
            <div class="form-group" align="center">
                <label class="control-label col-md-10 col-md-offset-1">Email*</label>
                <div class="col-md-10 col-md-offset-1">
                    @Html.TextBox("Email", "", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group" align="center">
                <div class="col-md-11 col-md-offset-1">
                    <input type="submit" value="Reset password" class="col-md-11 btn btn-default loginbtn" />
                </div>
            </div>
            <div class="text-success successmessage" >
                @ViewBag.Message
            </div>
            <br />
        </div>
    }

</div>